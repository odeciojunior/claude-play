# Claude Code Monitoring Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme123

# =============================================================================
# SMTP CONFIGURATION (for email alerts)
# =============================================================================
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
GF_SMTP_ENABLED=true
GF_SMTP_HOST=smtp.gmail.com:587
GF_SMTP_USER=your-email@gmail.com
GF_SMTP_PASSWORD=your-app-password
GF_SMTP_FROM_ADDRESS=alerts@claudecode.io

# =============================================================================
# SLACK CONFIGURATION (for Slack alerts)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# PAGERDUTY CONFIGURATION (for on-call alerts)
# =============================================================================
PAGERDUTY_SERVICE_KEY=your-pagerduty-integration-key

# =============================================================================
# DATABASE CONFIGURATION (if using PostgreSQL exporter)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claude_code
DB_USER=postgres
DB_PASSWORD=your-db-password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
